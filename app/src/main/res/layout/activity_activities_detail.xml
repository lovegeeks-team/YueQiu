<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:scrollbars="none">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/detail_ll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/devide_line"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/login_shape"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_detail_head"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:src="@drawable/default_head" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_detail_username"
                            style="@style/ListItemTvStyle"
                            android:layout_marginLeft="5dp"
                            android:textSize="18sp"
                            android:text="温柔的雨" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv_detail_sex"
                                style="@style/TimeTextStyle"
                                android:layout_marginLeft="5dp"
                                android:padding="4dp"
                                android:textSize="14sp"
                                android:background="@drawable/textview_withdrawable_bg"
                                android:drawableRight="@drawable/male"
                                android:text="@string/man" />

                            <TextView
                                android:id="@+id/tv_detail_looknum"
                                style="@style/TimeTextStyle"
                                android:textSize="14sp"
                                android:layout_marginLeft="5dp"
                                android:drawableLeft="@drawable/reading"
                                android:text="210" />
                        </LinearLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:gravity="right"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_detail_date"
                            style="@style/TimeTextStyle"
                            android:text="12-20" />

                        <TextView
                            android:id="@+id/tv_detail_time"
                            style="@style/TimeTextStyle"
                            android:layout_marginLeft="10dp"
                            android:text="21 : 20" />
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/devide_line" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="8"
                    android:orientation="vertical">
                    <TextView
                        android:textSize="18sp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:id="@+id/tv_detail_title"
                        style="@style/ListItemTvStyle"
                        android:text="xxx台球厅周年会员比赛"
                        android:layout_width="match_parent"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:textSize="18sp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="5dp"
                            style="@style/ListItemTvStyle"
                            android:text="@string/activities_type" />

                        <TextView
                            android:textSize="18sp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="5dp"
                            android:id="@+id/tv_detail_type"
                            style="@style/ListItemTvStyle" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:textSize="18sp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="5dp"
                            style="@style/ListItemTvStyle"
                            android:text="@string/activities_site" />

                        <TextView

                            android:textSize="18sp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="5dp"
                            android:id="@+id/tv_detail_site"
                            style="@style/ListItemTvStyle" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:textSize="18sp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="5dp"
                            style="@style/ListItemTvStyle"
                            android:text="@string/activities_start_time" />

                        <TextView
                            android:textSize="18sp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="5dp"
                            android:id="@+id/tv_detail_begin_time"
                            style="@style/ListItemTvStyle" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:textSize="18sp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="5dp"
                            style="@style/ListItemTvStyle"
                            android:text="@string/activities_end_time" />

                        <TextView
                            android:textSize="18sp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="5dp"
                            android:id="@+id/tv_detail_end_time"
                            style="@style/ListItemTvStyle" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:textSize="18sp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="5dp"
                            style="@style/ListItemTvStyle"
                            android:text="@string/activities_charge_module" />

                        <TextView
                            android:textSize="18sp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="5dp"
                            android:id="@+id/tv_detail_model"
                            style="@style/ListItemTvStyle" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:textSize="18sp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="5dp"
                            style="@style/ListItemTvStyle"
                            android:text="@string/btn_liaoba_contact" />

                        <TextView
                            android:textSize="18sp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="5dp"
                            android:id="@+id/tv_detail_contact"
                            style="@style/ListItemTvStyle" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:textSize="18sp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="5dp"
                            style="@style/ListItemTvStyle"
                            android:text="@string/activities_phone" />

                        <TextView
                            android:textSize="18sp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="5dp"
                            android:id="@+id/tv_detail_phone"
                            style="@style/ListItemTvStyle" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:textSize="18sp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="5dp"
                            style="@style/ListItemTvStyle"
                            android:text="@string/activity_illustration" />

                        <TextView
                            android:textSize="18sp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="5dp"
                            android:id="@+id/tv_detail_info"
                            style="@style/ListItemTvStyle" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"></LinearLayout>
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    style="@style/ListItemTvStyle"
                    android:text="@string/search_dating_detailed_tv_already_in"
                    android:textSize="18sp"
                    android:layout_weight="0.5"
                    android:background="@color/devide_line"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="5dp"
                        android:gravity="bottom"
                        android:orientation="horizontal">


                    </LinearLayout>

                    <Button
                        android:id="@+id/btn_activities_join"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/login_button_bg"
                        android:text="@string/join"
                        android:textColor="@color/white" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ProgressBar
                android:id="@+id/pb_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true" />
            <TextView
                android:id="@+id/detail_error"
                android:text="暂无数据"
                android:textSize="20sp"
                android:layout_centerInParent="true"
                style="@style/ListItemTvStyle" />
        </RelativeLayout>
    </FrameLayout>

</ScrollView>