<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:background="@color/white"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_margin="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/image_1_1"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:padding="3dp"
                android:src="@drawable/head_img"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignRight="@id/image_1_1"
                android:layout_alignTop="@id/image_1_1"
                android:src="@drawable/delete_img"/>
            </RelativeLayout>

        <RelativeLayout
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/image_1_2"
                android:padding="3dp"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/head_img"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignRight="@id/image_1_2"
                android:layout_alignTop="@id/image_1_2"
                android:src="@drawable/delete_img"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_margin="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/image_1_3"
                android:padding="3dp"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/head_img"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignRight="@id/image_1_3"
                android:layout_alignTop="@id/image_1_3"
                android:src="@drawable/delete_img"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/image_1_4"
                android:padding="3dp"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/add_img"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignRight="@id/image_1_4"
                android:layout_alignTop="@id/image_1_4"/>
        </RelativeLayout>
        </LinearLayout>
</LinearLayout>