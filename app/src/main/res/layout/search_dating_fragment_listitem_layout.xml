<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <!-- 用于SearchActivity当中的约球子Fragment当中的ListView当中的item的具体的布局layout文件-->
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:id="@+id/img_dating_subfragment_listitem_photo"
        android:padding="4dp"
        android:layout_margin="4dp"
        android:src="@drawable/ic_launcher"
        android:layout_alignParentLeft="true"
        />


    <TextView
        style="@style/ListItemTvStyle"
        android:id="@+id/tv_dating_subfragment_listitem_nickname"
        android:layout_toRightOf="@id/img_dating_subfragment_listitem_photo"
        android:text="@string/search_coauch_sub_fragment_listitem_username"
        android:textSize="23sp"
        android:textColor="@android:color/black"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="4dp"
        android:padding="4dp"
        />
    
    <TextView
        style="@style/ListItemTvStyle"
        android:id="@+id/tv_dating_subfragment_listitem_declareation"
        android:text="@string/search_dating_sub_fragment_listitem_user_declar"
        android:layout_below="@id/tv_dating_subfragment_listitem_nickname"
        android:layout_toRightOf="@id/img_dating_subfragment_listitem_photo"
        android:textSize="19sp"
        android:paddingLeft="4dp"
        android:padding="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="4dp"
        />

    <TextView
        style="@style/ListItemTvStyle"
        android:id="@+id/tv_dating_subfragment_listitem_distance_meter"
        android:padding="4dp"
        android:layout_alignTop="@id/tv_dating_subfragment_listitem_nickname"
        android:layout_alignParentRight="true"
        android:text="@string/search_mate_popupmenu_item_500_str"
        android:layout_marginTop="10dp"
        android:layout_marginRight="7dp"
        />

</RelativeLayout>