<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <Button
        style="@style/PopupWindowTvStyle"
        android:id="@+id/search_room_popupwindow_nofilter"
        android:text="@string/search_room_price_popupwindow_no_filter"
        android:layout_margin="2dp"
        android:textColor="@android:color/holo_red_light"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@android:color/holo_red_light">
    </View>

    <Button
        style="@style/PopupWindowTvStyle"
        android:id="@+id/search_room_popupwindow_lowtohigh"
        android:text="@string/search_room_price_popupwindow_lowtohigh"
        android:layout_margin="2dp"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@android:color/darker_gray">
    </View>

    <Button
        style="@style/PopupWindowTvStyle"
        android:id="@+id/search_room_popupwindow_hightolow"
        android:text="@string/search_room_price_popupwindow_hightolow"
        android:layout_margin="2dp"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@android:color/darker_gray">
    </View>


</LinearLayout>